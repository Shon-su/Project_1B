<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ccffcc"
    tools:context="com.example.android.project_1b.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italiana"
        android:textStyle="italic"
        android:weight ="0"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:id="@+id/textViewHeader"
        android:padding ="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weight ="0"
        android:text="The best ice creams in the galaxy!"
        android:layout_alignBottom="@id/textViewHeader"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textViewDescription"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/small"
        android:id="@+id/imageView"
        android:layout_margin="2px"
        android:weight="0"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weight ="1"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:text="Flavour of the day:"
        android:id="@+id/textViewFlavour"
        android:layout_above="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="#00ff00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gummy Bear"
        android:id="@+id/textViewFlavourOfTheDay"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="#b8b8e0"
        android:textStyle="bold"
        android:padding="5dp"/>

</RelativeLayout>
